APP_NAME=ChronoQuill
NODE_ENV=production
TIMEZONE=America/New_York
LOG_LEVEL=info
DATABASE_PATH=./data/chronoquill.db
TRANSPORT_ADAPTER=baileys
BAILEYS_AUTH_DIR=./data/whatsapp-auth
BAILEYS_PRINT_QR=true
BAILEYS_BROWSER_NAME=ChronoQuill
BROWSER_WORKER_ADAPTER=agent-browser
AGENT_BROWSER_PROVIDER=
AGENT_BROWSER_HEADLESS=true
AGENT_BROWSER_NAV_TIMEOUT_MS=45000
LLM_CURATION_ENABLED=false
LLM_PROVIDER_NAME=none
SOURCE_SYNC_ENABLED=true
SOURCE_SYNC_SCHEDULE=0 3 * * *
CATCHUP_ENABLED=true
GLOBAL_SAME_DAY_DUPLICATE_BLOCK=true
MAX_RETRY_ATTEMPTS=5
RETRY_BASE_DELAY_MS=1000
RETRY_MAX_DELAY_MS=30000
DEFAULT_COOLDOWN_DAYS=45
ALLOW_SAME_QUOTE_GLOBAL_SAME_DAY=false
